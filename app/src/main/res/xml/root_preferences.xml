<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/themeSettings">
        <DropDownPreference
            app:entries="@array/darkTheme"
            app:entryValues="@array/darkThemeValue"
            app:key="defaultDarkMode"
            app:title="@string/theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/translation_screen_options">
        <SwitchPreference
            app:key="isEnabledSwapLangButton"
            app:title="@string/show_switch_lang_button" />
    </PreferenceCategory>

</PreferenceScreen>